<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".ButtonActivity">

    <Button
        android:id="@+id/btnSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botón Simple"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/btnImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_send" 
        android:contentDescription="Botón con Imagen"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnStyled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botón con Estilo"
        android:backgroundTint="@color/purple_500" 
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botón Material"
        app:icon="@android:drawable/ic_input_add"
        android:layout_marginBottom="24dp" />
        
    <TextView
        android:id="@+id/tvButtonFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presiona un botón"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnGoToMainFromButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al Menú Principal"
        android:layout_marginTop="32dp" />

</LinearLayout>
