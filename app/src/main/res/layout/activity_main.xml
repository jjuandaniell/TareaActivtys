<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MenÃº Principal"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnGoToText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text Activity"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnGoToButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button Activity"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnGoToWidgets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Widgets Activity"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnGoToMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Media Activity"/>

</LinearLayout>
